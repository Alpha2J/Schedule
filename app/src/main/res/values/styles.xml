<resources>

    <!--主题-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Setting Activity的主题, 因为preference.xml无法设置主题-->
    <style name="SettingsActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--风格-->
    <!--EditText颜色设置-->
    <style name="CustomColorEditTextStyle" parent="Theme.AppCompat.Light">
        <!--未选中时的颜色-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--选中时的颜色-->
        <item name="colorControlActivated">@color/colorSecondaryAccent</item>
    </style>

    <!--白色的EditText-->
    <style name="CustomLightEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <!--Toolbar的字体大小-->
    <style name="CustomToolbarTextSizeStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!--RecyclerView的标题的通用部分-->
    <style name="CustomRVSectionHeaderStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--RecyclerView的通用部分-->
    <style name="CustomRVStyle">
        <!-- NOTE: clipChildren should be false on API level 11 or later -->
        <item name="android:clipChildren">false</item>
        <!--默认值为true, 滚动的时候能明显地看到padding区域, 难看-->
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">0dp</item>
        <!--默认值是insideOverlay, 他会覆盖在padding区域内, 很难看-->
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!--add activity全屏输入Description的dialog style-->
    <style name="CustomDialogFullscreen" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="CustomRVItemStyle">
    </style>

    <!--NavigationVIew的Header部分背景传到通知栏-->
    <style name="CustomNavHeaderInStatusBar" parent="AppTheme">
    </style>

    <!--底部快速添加的主题, 只改变accent的颜色-->
    <style name="CustomFastAddDialog" parent="@style/AppTheme" >
        <item name="colorAccent">@color/colorSecondaryAccent</item>
    </style>
</resources>
