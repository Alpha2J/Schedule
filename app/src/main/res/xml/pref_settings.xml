<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="基本设置">

        <CheckBoxPreference
            android:defaultValue="true"
            android:title="从服务器获取数据"
            android:summary="包括图片和谚语"
            android:key="get_data_from_server" />
    </PreferenceCategory>

    <PreferenceCategory android:title="提醒设置">

        <SwitchPreference
            android:defaultValue="true"
            android:key="open_reminder_when_new_task"
            android:title="新建任务默认开启提醒" />

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="提前"
            android:entries="@array/dialog_remind_in_advance_time_titles"
            android:entryValues="@array/dialog_remind_in_advance_time_values"
            android:key="before_time"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="提前时间"
            android:dependency="open_reminder_when_new_task" />

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="提醒方式"
            android:entries="@array/dialog_remind_type_titles"
            android:entryValues="@array/dialog_remind_type_values"
            android:key="remind_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="提醒方式" />

        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:key="remind_ringtone"
            android:ringtoneType="notification"
            android:title="提醒铃声" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="remind_vibrate"
            android:title="震动"
            android:summary="提醒时震动" />
    </PreferenceCategory>

    <PreferenceCategory android:title="网络设置">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="data_only_wifi"
            android:title="仅在wifi环境下获取服务器数据" />
    </PreferenceCategory>
</PreferenceScreen>
