<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.alpha2j.schedule">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.ui.activity.MainActivity"
            android:label="Schedule">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.ui.activity.AddTaskActivity" />

        <receiver
            android:name=".app.broadcast.TaskTimeOutReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="cn.alpha2j.schedule.receiver.TASK_TIME_OUT" />
            </intent-filter>
        </receiver>

        <activity android:name=".app.ui.activity.UserProfileActivity" />
        <activity android:name=".app.ui.activity.SettingActivity" />
        <activity android:name=".app.ui.activity.TaskStatisticsActivity" />
        <activity android:name=".app.ui.activity.TestActivity"></activity>
    </application>

</manifest>